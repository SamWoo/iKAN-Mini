/**app.wxss**/
/* 引入iconfont */
@import "/style/iconfont.wxss";

page {
  height: 100%;
  width: 100%;
  background-color: #f0f0f0;
  --themeColor: #25a34b;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  /* align-items: center; */
  /* padding: 10rpx 10rpx; */
  /* justify-content: space-between; */
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
  /* 全局隐藏滚动条*/
}

.main {
  width: 100%;
  /* display: flex; */
  box-sizing: border-box;
  flex-direction: column;
  /* align-items: center; */
  padding: 10rpx 10rpx;
  /* justify-content: space-between; */
}

.re-item {
  width: 730rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.item-pic {
  width: 136rpx;
  height: 180rpx;
  margin-right: 10rpx;
  float: left;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  overflow: hidden;
}

.item-name {
  height: 40rpx;
  margin-top: 12rpx;
  margin-right: 16rpx;
  padding: 4rpx 0rpx;
  font-size: 28rpx;
  align-items: center;
  font-weight: bold;
  overflow: hidden;
  color: rgb(56, 118, 155);
  /* white-space: nowrap; */
  text-overflow: ellipsis;
  /* background-color: aqua; */
}

.item-desc {
  height: inherit;
  margin-left: 10rpx;
  flex: 1;
  display: inline-block;
  flex-direction: column;
  /* justify-content:space-between; */
  /* background-color: aqua; */
}

.item-content {
  height: 32rpx;
  margin-right: 42rpx;
  font-size: 26rpx;
  align-items: center;
  margin-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* background-color: burlywood; */
}

.float-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  position: fixed;
  right: 20rpx;
  bottom: 60rpx;
  text-align: center;
  line-height: 80rpx;
  z-index: 2;
  color: var(--themeColor--);
  background-color: #fff;
  box-shadow: 0rpx 0rpx 12rpx rgba(3, 3, 3, 0.603);
}

.search-row {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid var(--themeColor--);
  border-radius: 40rpx;
}

.search-icon {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.search-row input {
  flex: 1;
  /* 撑满剩余空间 */
}

.search-row .button-search {
  width: 120rpx;
  height: 100%;
  padding: 0;
  margin-left: 20rpx;
  display: flex;
  color: green;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  background-color: transparent;
}

/* 数据为空时 */
.empty {
  width: 100%;
  /* height: 100%; */
  /* background-color: aqua; */
  /* 以下设置文字垂直居中显示 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 26rpx;
  color: rgb(182, 176, 176);
}

.empty image {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 10rpx;
}

.music-item {
  display: flex;
  align-items: center;
  padding: 16rpx 8rpx;
  margin: 10rpx 0rpx;
  border: 1rpx dashed var(--themeColor--);
  border-radius: 8rpx;
  font-size: 30rpx;
}

/* 音乐相关 */
.music-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}

.music-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 30rpx;
}

.icon-arrow-right {
  position: absolute;
  margin: auto 8rpx;
  color: var(--themeColor--);
  right: 0rpx;
  font-size: 32rpx
}

.icon-arrow-left {
  position: absolute;
  /* margin: auto 8rpx; */
  color: white;
  left: 32rpx;
  top: 100rpx;
  font-size: 64rpx;
  z-index: 1;
}