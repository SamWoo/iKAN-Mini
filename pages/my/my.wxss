/* pages/my/my.wxss */
.header {
  height: 15%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  /* background-color: #fff; */
  margin-bottom: 12rpx;
  /* background: linear-gradient(to right, #333399, #ff00cc); */
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  /* padding: 12rpx; */
  background-color: rgb(228, 231, 231);
  border-radius: 50%;
  padding: 16rpx;
}

.user {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
  /* background-color: burlywood; */
  justify-content: center;
  color: #fff;
}

.login {
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1rpx solid #fff;
  padding: 8rpx;
  font-size: 24rpx;
  /* background-color: green; */
}

.nickname {
  font-size: 28rpx;
  font-weight: bold;
}

.signature {
  margin-top: 20rpx;
  font-size: 26rpx;
  font-weight: lighter;
}

.vip {
  height: 48rpx;
  width: 48rpx;
  margin-right: 40rpx;
}

.cer {
  width: 150rpx;
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  border-radius: 32rpx;
  color: #fff;
  margin-right: 20rpx;
  /* font-weight: bold; */
  font-size: 28rpx;
}

.list-item {
  height: 84rpx;
  width: 100%;
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 84rpx;
  border-radius: 12rpx;
  background-color: #fff;
}

.iconfont{
  font-size: 46rpx;
  margin: auto 16rpx;
  color: var(--themeColor--);
}

.icon-arrow-right{
  position: absolute;
  right:10rpx;
  font-size:32rpx
}

.item-icon {
  width: 42rpx;
  height: 42rpx;
  margin: auto 12rpx;
}

.item-text {
  font-size: 32rpx;
  font-weight: lighter;
}

/* 用户信息修改弹窗样式 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
  font-size: 30rpx;
}

.popup-container {
  width: 80%;
  /* height: 50%; */
  background-color: #ffffff;
  padding: 20px;
  border-radius: 10px;
}

.popup-header {
  display: flex;
  padding: 8rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  border-bottom: 1rpx solid #dcdcdc;
  /* background-color: chartreuse; */
}

.popup-title {
  font-size: 16px;
  font-weight: bold;
}

.form-item {
  display: flex;
  height: 48px;
  /* flex-direction: column; */
  align-items: center;
  padding: 8rpx;
  margin-bottom: 15px;
  border-radius: 10rpx;
  background-color: #f3f3f3;
}

.popup-img{
  width:72rpx;
  height: 72rpx;
  padding: 10rpx;
  border-radius: 50% ;
  background-color: #fff;
}

.label {
  width: 25%;
  height: inherit;
  display: flex;
  align-items: center;
  justify-content:left;
  /* font-size: 26rpx; */
  font-weight: bold;
  margin-right: 8rpx;
  /* background-color: #fff; */
}

.name-box{
  width: 70%;
}

.signature-box{
  /* height: 30%; */
  width: inherit;
  padding: 16rpx;
  border-radius: 10rpx;
  background-color: #f3f3f3;
}

.popup-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}
